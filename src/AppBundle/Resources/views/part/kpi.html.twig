          <div class="row">
            {% for  produit in produits|slice(0,4)%}
            <div class="col-xl-3 col-lg-6">
              <div class="card card-stats mb-4 mb-xl-0">
                <div class="card-body">
                  <div class="row">
                    <div class="col">
                      <h5 class="card-title text-uppercase text-muted mb-0">{{produit.nom}}</h5>
                      <span class="h2 font-weight-bold mb-0">{{produit.nombre|number_format(0, ',', '.')}}</span>
                    </div>
                    <div class="col-auto">
                      <div class="icon icon-shape bg-danger text-white rounded-circle shadow">
                        <i class="fas fa-chart-bar"></i>
                      </div>
                    </div>
                  </div>
                  <p class="mt-3 mb-0 text-muted text-sm">
                    <span class="text-success mr-2"></span>
                    <span class="text-nowrap">{{produit.description}}</span>
                  </p>
                </div>
              </div>
            </div>
          {% endfor %}
          </div>