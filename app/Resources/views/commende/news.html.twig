{% extends 'base.html.twig' %}
{% block body %}
<h3 class="mb-0">Rapports de {{user.nom}}</h3>
    {{ form_start(form) }}
     <table border="1">
        <tbody>
         <tr>
        <th> {{ form_label(form.date, 'Date du rapport')}}</th>
         <td>{{ form_widget(form.date)}}</td>
        </tr>
    {% for commendeField in form.commendes %}
        <tr>
             <th>{{ form_label(commendeField, commendeField.vars.value.affectation.pointVente.nom)}}</th>
             <td>
                  <table>
                     <tbody>
                    {% for ligneField in commendeField.lignes %}
                       <tr>
                         <th>{{ form_label(ligneField, ligneField.vars.value.produit.nom)}}</th>
                         <td>{{ form_widget(ligneField.quantite) }}</td>
                       </tr>
                    {% endfor %}
                    </tbody>
                  </table>
           </td>
        </tr>
    {% endfor %}
      </tbody>
    </table>
<input type="submit" value="Enregistrer" />
    {{ form_end(form) }}
    <ul>
        <li>
            <a href="{{ path('commendes_news') }}">Aller Ã  l'accueil</a>
        </li>
{% endblock %}
