{% extends "AppBundle::index.html.twig" %}
  {% block title %}Historique des rapports {% endblock %} 
{% block corps %}
       <div class="row">
        <div class="col">
          <div class="card shadow">
            <div class="card-header border-0">
              <h3 class="mb-0">Historique des rapports</h3>
            </div>   
        <div class="table-responsive">
    <table class="table align-items-center table-flush" id="myTable">
        <thead class="thead-light">
            <tr>
                <th>Date</th>
                <th>Superviseur</th>
                <th>BA</th>
                <th>PDV</th>
                <th>C. Rendu</th>
                <th>Insident</th>
            </tr>
        </thead>
        <tbody>
        {% for commende in commendes %}
            <tr>
                <td>
                   <a href="{{ path('commende_show',{'id':commende.id}) }}">
                     {% if commende.date %}{{ commende.date|date('d/m/Y') }}{% endif %}
                    </a>
                </td>
                <td>
                    {{ commende.user.nom }}
                </td>
                 <td>{{ commende.affectation.ressource.nom }}</td>
                 <td>{{ commende.affectation.pointVente.nom }}</td>
                 <td>{{ commende.description }}</td>
                <td>
                    {{ commende.typeInsident }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            </div>
          </div>
        </div>
      </div>

{% endblock %}
  {% block chart %}            
  {% endblock %}