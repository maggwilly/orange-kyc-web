{% extends "AppBundle::index.html.twig" %}
  {% block title %}Historique des rapports {% endblock %} 
{% block corps %}
       <div class="row">
        <div class="col">
          <div class="card shadow">
            <div class="card-header border-0">
              <h3 class="mb-0">Historique des rapports</h3>
            </div>   
        <div class="table-responsive">
    <table class="table align-items-center table-flush" id="myTable">
        <thead class="thead-light">
            <tr>
                <th>Date</th>
                <th>Superviseur</th>
                <th>Ville</th>
                <th>Ressource</th>
                <th>Telephone</th>
                <th>Type</th>
                <th>Compte rendu</th>
                <th>Insident</th>
            </tr>
        </thead>
        <tbody>
        {% for commende in commendes %}
            <tr>
                <td>
                   <a href="{{ path('commende_show',{'id':commende.id}) }}">
                     {% if commende.date %}{{ commende.date|date('d/m/Y') }}{% endif %}
                    </a>
                </td>
                <td>{{ commende.user.nom }}</td>
                 <td>{{ commende.pointVente.ville }}</td>
                <td>{{ commende.pointVente.nom }}</td>
                <td>{{ commende.pointVente.telephone }}</td>
                <td>{{ commende.pointVente.type }}</td>
                <td>{{ commende.description }}</td>
                <td>{{ commende.typeInsident }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            </div>
          </div>
        </div>
      </div>
{% endblock %}
  {% block chart %}            
  {% endblock %}