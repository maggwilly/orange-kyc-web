{% extends "AppBundle::index.html.twig" %}
  {% block title %}¨{{commende.pointVente.nom}} {% if commende.date %}{{ commende.date|date('D d  M Y') }}{% endif %}{% endblock %} 
{% block corps %}
       <div class="row">
        <div class="col">
          <div class="card shadow">
            <div class="card-header border-0">
              <h3 class="mb-0">{{commende.pointVente.nom}}</h3>
            </div>   
        <div class="table-responsive">
    <table class="table align-items-center table-flush">
        <tbody>
            <tr>
                <th>Date du rapport</th>
                <td>{% if commende.date %}{{ commende.date|date('D d  M Y') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Ressource </th>
                <td>{{commende.pointVente.nom}}</td>
            </tr>
            <tr>
                <th>Telephone </th>
                <td>{{commende.pointVente.telephone}}</td>
            </tr>            
        </tbody>
    </table>
 <h2> Détails du rapport</h2>
    <table class="table align-items-center table-flush">
            <thead class="thead-light">
                  <tr>
                    <th scope="col">operation</th>
                    <th scope="col">Nombre</th>
                  </tr>
          </thead>
        <tbody>
                 {% for item in commende.lignes %}
                  <tr>
                    <th scope="row">
                   <a href="#"> {{ item.produit.nom|e }}</a>
                    </th>
                    <td>
                      {{ item.quantite }}
                    </td>                    
                  </tr>
                {% endfor %}
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('commende_index') }}" class=" btn btn-info btn-md">Retour à la liste</a>
        </li>
    </ul>
            </div>
